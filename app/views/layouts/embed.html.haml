!!!
%html
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=utf-8"}
    <meta property="og:title" content="Resto-Net" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://resto-net.ca/" />
    <meta property="og:image" content="http://resto-net.ca/images/logo.png" />
    <meta property="og:site_name" content="Resto-Net" />
    <meta property="fb:admins" content="100002666906486" />
    %title= title
    %meta{:name => "author", :content => "Jeff Wallace"}
    %meta{:name => "description", :content => meta_description}
    = stylesheet_link_tag "reset", "text", "620", "menu", "main", "embed"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Serif|Droid+Sans"
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
    = javascript_include_tag :defaults, 'embed'
    = content_for :head
    = csrf_meta_tag
  %body
    #fb-root
    #main.container_12

      #map.grid_12
        = content_for :map
      %div.clear

      #menu.grid_12
        = render 'shared/embed_menu'
      %div.clear

      #content
        = yield
      %div.clear

      #footer.grid_12
        = render 'shared/footer'
      %div.clear

    = javascript_include_tag "http://connect.facebook.net/#{t :facebook_locale}/all.js#xfbml=1"
    = render 'shared/analytics' if Rails.env.production?
