!!!
%html
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=utf-8"}
    %title= content_for?(:title) ? content_for(:title) : t(:app_title)
    %meta{:name => "author", :content => "Jeff Wallace"}
    %meta{:name => "description", :content => t(:meta_description)}
    = stylesheet_link_tag "reset", "text", "960", "menu", "main", :cache => true
    - fonts = %w(Droid+Serif Droid+Sans).join('|')
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=#{fonts}"
    = javascript_include_tag :defaults
    = content_for :head
    = csrf_meta_tag
  %body
    #main.container_12
      #header.grid_12
        = link_to image_tag('logo.png', :alt=>"Resto-Net"), root_path
        %h2= t :app_sub_title
      %div.clear
      #menu.grid_12
        = render 'shared/menu'
      %div.clear
      #content
        = yield
      %div.clear
      #footer.grid_12
        = render 'shared/footer' unless params[:controller] == 'pages' && params[:action] == 'about'
      %div.clear
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-17862637-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
