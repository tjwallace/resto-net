!!!
%html
  %head
    %title= content_for?(:title) ? content_for(:title) : t(:app_title)
    - %w(reset text 960 main).each do |css_file|
      = stylesheet_link_tag css_file
    - fonts = %w(Lobster Droid+Serif Droid+Sans).join('|')
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=#{fonts}"
    = javascript_include_tag :defaults
    = content_for :head
    = csrf_meta_tag
  %body
    #main.container_12
      #header.grid_12
        %h1= t :app_title
        %h2= t :app_sub_title
      %div.clear
      #menu.grid_12
        = render 'shared/menu'
      %div.clear
      #content
        = yield
      %div.clear
      #footer.grid_12
        = render 'shared/footer'
      %div.clear
