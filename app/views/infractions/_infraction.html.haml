%div
  .description
    %h1 #{t :description}:
    = I18n.translate_attribute infraction, :description
  %ul
    %li #{t :owner}: #{infraction.owner.name}
    %li #{t :infraction_date}: #{l infraction.infraction_date}
    %li #{t :judgment_date}: #{l infraction.judgment_date}
    %li #{t :amount}: #{number_to_currency infraction.amount}
  <a href="http://twitter.com/share" class="twitter-share-button" data-text="#{t :tweet_infraction, :name => infraction.establishment.name, :address => infraction.establishment.short_address, :amount => number_to_currency(infraction.amount), :date => l(infraction.judgment_date)}" data-count="horizontal" data-lang="#{I18n.locale}" data-via="resto_net"></a>

